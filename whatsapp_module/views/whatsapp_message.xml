<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Búsqueda -->
    <record model="ir.ui.view" id="whatsapp_message_search_view">
        <field name="name">whatsapp.message.search</field>
        <field name="model">whatsapp.message</field>
        <field name="arch" type="xml">
            <search>
                <field name="num_des"/>
            </search>
        </field>
    </record>

    <!-- Árbol -->
    <record model="ir.ui.view" id="whatsapp_message_tree_view">
        <field name="name">whatsapp.message.tree</field>
        <field name="model">whatsapp.message</field>
        <field name="arch" type="xml">
            <tree string="Lista de mensajes">
                <field name="num_des"/>
            </tree>
        </field>
    </record>

    <!-- Formulario -->
    <record model="ir.ui.view" id="whatsapp_message_form_view">
        <field name="name">whatsapp.message.form</field>
        <field name="model">whatsapp.message</field>
        <field name="arch" type="xml">
            <form string="Formulario">
                <sheet>
                    <div class="oe_title">
                        <label for="num_des" class="oe_edit_only" string="Número destino" />
                        <h1><field name="num_des" /></h1>
                    </div>
                </sheet>
                 <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                    </div>
            </form>
        </field>
    </record>

    <!-- Acción -->
    <record model="ir.actions.act_window" id="whatsapp_message_list_action">
        <field name="name">Lista de mensajes</field>
        <field name="res_model">whatsapp.message</field>
        <field name="view_mode">tree,search,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Acá se listan los message</p>
        </field>
    </record>


</odoo>
